Algoritmo "Problema Terreno"

Var
   l, c, mq, a, p : real
Inicio
      escreva("Digite a largura do terreno: ")
      leia(l)
      escreva("Digite o comprimento do terreno: ")
      leia(c)
      escreva("Digite o valor do metro quadrado: ")
      leia(mq)
      a <- l*c
      p <- mq*a
      escreval(a:6:2)
      escreva(p:8:2)
Fimalgoritmo